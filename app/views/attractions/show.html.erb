<h1><%= @attraction.name %></h1>
<p>Tickets to ride: <%= @attraction.tickets %></p>
<%= form_tag rides_new_path do %>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= hidden_field_tag :attraction_id, @attraction.id %>
  <%= submit_tag "Go on this ride" %>
<% end %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) if current_user.admin? %>
